<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowCount="4"
        android:columnCount="3">

        <TextView
            android:id="@+id/textColor"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="40dp"
            android:layout_columnSpan="3"
            android:text=""/>

        <Button
            android:id="@+id/btnAzureBlue"
            android:layout_width="wrap_content"
            android:text="Press"
            android:background="#052FFF"
            android:textColor="#ffffff"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnBeige"
            android:layout_width="wrap_content"
            android:text="Press"
            android:background="#A49480"
            android:textColor="#FFFFFF"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnBlue"
            android:layout_width="wrap_content"
            android:text="Press"
            android:background="#000080"
            android:textColor="#ffffff"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnGreen"
            android:layout_width="wrap_content"
            android:text="Press"
            android:background="#006633"
            android:textColor="#ffffff"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnGoldenYellow"
            android:layout_width="wrap_content"
            android:text="Press"
            android:background="#ffdf00"
            android:textColor="#000000"
            android:textSize="10dp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnRed"
            android:layout_width="wrap_content"
            android:text="Press"
            android:background="#ff0000"
            android:textColor="#ffffff"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnViolet"
            android:layout_width="wrap_content"
            android:text="Press"
            android:background="#663399"
            android:textColor="#ffffff"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnGrey"
            android:layout_width="wrap_content"
            android:text="Press"
            android:background="#d3d3d3"
            android:textColor="#000000"
            android:textSize="10dp"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btnOlive"
            android:layout_width="wrap_content"
            android:text="Press"
            android:background="#808000"
            android:textColor="#ffffff"
            android:layout_margin="5dp"/>
    </GridLayout>
</RelativeLayout>
